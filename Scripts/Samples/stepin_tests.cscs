function WhileInWhile(ind) {
  i = 0;
  while(i < ind) {
    i++;
    j = 0;
    while(j < i) {
      j++;
      if (j == 1) {
        print("  returning j=",j, ",i=", i);
        return i;
      }
      print("  End of j loop, j=", j);
      Test(true, false);
    }
    print("End of i loop, i=", i)
    Test(true, false);
  }
  print("End of WhileInWhile.");
  return 100+i;
}
